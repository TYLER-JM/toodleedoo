  <body class="bg-light">

    <% include ./partials/_header %>


    <main>
      <div class="container">

        <form id="update-profile" action='#' method='PUT'>
          <h3>My Profile</h3>

          <div class="form-group">
            <input type="text" class="form-control" placeholder="Email"/>
          </div>
          <div class="form-group">
            <input id="old-password" type="password" class="form-control" placeholder="Old Password" required/>
          </div>
          <div class="form-group">
            <input id="new-password" type="password" class="form-control" placeholder="New Password" required/>
          </div>
          <div class="form-group">
            <input type="submit" class="btn" value="Update Profile"/>
          </div>

        </form>

      </div>
    </main>

    <!-- External JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
