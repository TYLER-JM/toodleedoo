<main class='main-login'>

  <div id='container'>

    <div id='tab-container'>
      <a href="#register-form" id="register" class="tab register">Register</a>
      <a href="#login-form" id="login" class="tab select">Login</a>
    </div>

    <div id='panel'>

      <form id='login-form' action='/login' method='POST'>
        <h2>Login</h2>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-envelope"></i></div>
          </div>
          <input type="email" name="email" class="form-control" placeholder="Email" value="<%- locals.linEmail %>" required />
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-key"></i></div>
          </div>
          <input type="password" name="password" class="form-control" placeholder="Password" value="<%- locals.linEmail %>" required />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-login" value="Login" />
        </div>
        <a href="/auth/google">Log in with your Google account</a>

      </form>

      <form id='register-form' action='/signup' method='POST'>
        <h2>Register</h2>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-user"></i></div>
          </div>
          <input type="text" name="name" class="form-control" placeholder="Name" value="<%- locals.regName %>" required />
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-envelope"></i></div>
          </div>
          <input type="text" name="email" class="form-control" placeholder="Email" value="<%- locals.regEmail %>" required/>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-key"></i></div>
          </div>
          <input type="password" name="password" class="form-control" placeholder="Password" value="<%- locals.regPwd %>" required />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-register" value="Register" />
        </div>
      </form>

    </div>

  </div>


</main>

<!-- Font Awesome CDN -->
<script src="https://kit.fontawesome.com/d1a817b2bd.js" crossorigin="anonymous"></script>
